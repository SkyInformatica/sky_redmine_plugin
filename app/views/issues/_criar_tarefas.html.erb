<% if (@issue.status.name == "Teste NOK") && ["Notarial - QS", "Registral - QS"].include?(@issue.project.name) %>
  <%= link_to "Criar retorno de testes",
              retorno_testes_qs_path(:id => @issue.id),
              method: :post,
              class: "icon icon-copy" %>
<% elsif (@issue.status.name == "Resolvida") && !["Notarial - QS", "Registral - QS"].include?(@issue.project.name) %>
  <%= link_to "Criar retorno de testes",
              retorno_testes_devel_path(:id => @issue.id),
              method: :post,
              class: "icon icon-copy" %>
  <%= link_to "Encaminhar para QS",
              encaminhar_qs_path(:id => @issue.id),
              method: :post,
              class: "icon icon-copy" %>
<% end %>


