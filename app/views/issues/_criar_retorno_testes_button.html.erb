<% if (((@issue.project.name == "Notarial - QS") || (@issue.project.name == "Registral - QS")) && (@issue.status.name == "Teste NOK")) %>
    <%= link_to "Criar tarefa de retorno de testes para essa tarefa de testes",
                criar_retorno_testes_qs_path(:id => @issue.id),
                method: :post,
                class: "icon icon-copy" %>
<% end %>

if (!((@issue.project.name == "Notarial - QS") || (@issue.project.name == "Registral - QS")) && (@issue.status.name == "Resolvida"))   %>
    <%= link_to "Criar tarefa de retorno de testes para essa tarefa de desenvolvimento",
                criar_retorno_testes_devel_path(:id => @issue.id),
                method: :post,
                class: "icon icon-copy" %>
<% end %>
